# Discord Bot Token
DISCORD_TOKEN=

# Path to the quotes file
QUOTES_FILE=data/quotes.yaml

# Allowed Guild IDs (comma-separated) - CRITICAL SECURITY SETTING
# Leave empty to operate on ALL guilds (DANGEROUS - can cause mass messaging!)
# Example: ALLOWED_GUILD_IDS=123456789012345678,987654321098765432
ALLOWED_GUILD_IDS=

# Cleanup Mode - Set to 'true' to run message cleanup on startup
CLEANUP_MODE=false